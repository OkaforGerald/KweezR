@page "/login"

@if (ShowAuthenticationErrors)
{
    <div class="alert alert-danger" role="alert">
        <p>@Errors</p>
    </div>
}

    <div class="container">
        <div class="logo">KWEEZR</div>
        <EditForm Model="_userForAuthentication" OnValidSubmit="ExecuteLogin">
        <DataAnnotationsValidator />
            <div class="mb-3">
                <label for="email" class="form-label label-color">Email</label>
                <InputText @bind-Value="_userForAuthentication.Email" type="email" class="form-control" id="email"/>
                <ValidationMessage For="@(() => _userForAuthentication.Email)" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label label-color">Password</label>
                <InputText @bind-Value="_userForAuthentication.Password" type="password" class="form-control" id="password"/>
            <ValidationMessage For="@(() => _userForAuthentication.Password)" />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </EditForm>
        <div class="mt-3 text-center">
            <a href="register" class="text-light">Register</a>
            </div>
        </div>


